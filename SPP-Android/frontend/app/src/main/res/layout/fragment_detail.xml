<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/divider1">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/back"
            android:layout_gravity="start"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/tvToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Siswa"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#222222" />

        <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logout"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/infoSiswa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/infoSiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        app:layout_constraintBottom_toTopOf="@+id/divider3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="NISN : "
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvNisn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="- NISN -"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="NIS : "
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvNis"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="- NIS -"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ccc"
            android:layout_marginVertical="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Nama Siswa : "
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:text="- Nama Siswa -"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="Kelas : "
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvKelas"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:text="- Kelas Siswa -"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:text="Nominal : "
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvNominal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="- Rp. 0 -"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:text="Bulan Sudah Dibayar : "
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvBulanDibayar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="- Rp. 0 -"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:text="Total Dibayar : "
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvTotalDibayar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="- Rp. 0 -"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:text="Tunggakan : "
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvTunggakan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="- Rp. 0 -"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ccc"
            android:layout_marginVertical="4dp"/>

        <LinearLayout
            android:id="@+id/tombol"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCetakKartu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/btn_bg"
                android:backgroundTint="#009688"
                android:layout_marginRight="20dp"
                android:textSize="12dp"
                android:text="Cetak Kartu"
                android:textColor="#ffffff"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBayar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@drawable/btn_bg"
                android:backgroundTint="#4CAF50"
                android:textSize="12dp"
                android:text="Bayar"
                android:textColor="#ffffff"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@+id/infoSiswa"
        app:layout_constraintBottom_toTopOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/divider4"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Bulan Dibayar"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Tanggal Dibayar"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Nama Petugas"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Aksi"
            android:textColor="@android:color/black"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintBottom_toTopOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:divider="#00000000"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
